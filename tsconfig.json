{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/ts/",
    "sourceMap": true,
    "target": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "importHelpers": true
  },
  "files": [
    "src/options/options.ts"
  ],
  "include": [
    "src/**/inject.ts",
    "src/**/contentScript.ts",
    "typings/**/*.d.ts"
  ]
}
